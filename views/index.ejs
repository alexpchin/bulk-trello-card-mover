<h1>Trello Bulk Card Mover</h1>
<section class="logged-out">
  <form class="login">
    <input type="submit" value="Login">
  </form>
</section>
<section class="logged-in">
  <form class="duplicate" name="board">
    <label name="new">Do you want to create a new board?</label>
    <input type="radio" name="new" value="no" checked=true><span>No</span>
    <input type="radio" name="new" value="yes"><span>Yes</span>
    <label for="name">Choose a name for your new board</label>
    <input type="text" name="name" id="name">
    <label for="idBoardSource">Select board to shift/duplicate</label>
    <select class="boards" name="idBoardSource" id="idBoardSource" required>
    </select>
    <label for="old-start-date">Old course start date</label>
    <input type="date" name="old-start-date" id="old-start-date" required>
    <label for="new-start-date">New course start date</label>
    <input type="date" name="new-start-date" id="new-start-date" required>
    <select name="direction" id="direction">
      <option value="+">Forward</option>
      <option value="-">Backward</option>
    </select>
    <input type="submit" value="Shift/Duplicate">
  </form>
  <h2 class="message"></h2>
</section>
